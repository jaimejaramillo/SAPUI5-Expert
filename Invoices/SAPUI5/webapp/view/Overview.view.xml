<mvc:View controllerName="ns.SAPUI5.controller.App"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">
    <Page title="{i18n>appTitle}">
        <landmarkInfo>
            <PageAccessibleLandmarkInfo rootRole="Region"
                                        rootLabel="{i18n>overViewRootLable}"
                                        contentRole="Main"
                                        contentLabel="{i18n>overViewContentLable}"
                                        headerRole="Banner"
                                        headerLabel="{i18n>overViewHeaderLabel}"/>
        </landmarkInfo>
        <headerContent>
            <Button id="helloDialogHeader"
                    icon="sap-icon://action"
                    press=".onOpenDialogHeader" 
                    class="sapUiTinyMarginEnd"/>                 
        </headerContent>
        <content>
            <mvc:XMLView viewName="ns.SAPUI5.view.HelloPanel"/>
            <mvc:XMLView viewName="ns.SAPUI5.view.InvoicesList"/>
        </content>
    </Page>
</mvc:View>