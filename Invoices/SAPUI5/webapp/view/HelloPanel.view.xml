<mvc:View controllerName="ns.SAPUI5.controller.HelloPanel"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">
    <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"></Button>
            <Input value="{/recipient/name}"
                valueLiveUpdate="true"
                width="60%"/>
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="ns.SAPUI5.view.Form01" type="XML"/>
</mvc:View>