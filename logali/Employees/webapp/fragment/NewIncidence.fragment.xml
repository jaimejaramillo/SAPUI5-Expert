<core:FragmentDefinition xmlns:core = "sap.ui.core"
                         xmlns="sap.m">
    <Panel>
        <headerToolbar>
            <Toolbar>
                <core:Icon src="{= ${incidenceModel>status}==='0' ? 'accept' :
                                   ${incidenceModel>status}==='1' ? 'alert' :
                                   ${incidenceModel>status}==='2' ? 'decline' : '' }"/>
                <Title text="{i18n>incidence} {incidenceModel>index} { path: 'incidenceModel>Date',
                                                                       formatter: '.Formatter.dateFormatter'}"></Title>
                
                <ToolbarSpacer/>
                <core:Icon src='delete' press='onDeleteIncidence'></core:Icon>
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="{i18n>inicidenceDate}"/>
                    <DatePicker dateValue="{incidenceModel>Date}"/>
                </VBox>
                <VBox class="sapUiSmallMarginEnd" visible="{= ${incidenceModel>Date} !== '' &amp;&amp; ${incidenceModel>Date} !==undefined}">
                    <Text text="{i18n>incidenceReason}"/>
                    <Input></Input>
                </VBox>
                <VBox class="sapUiSmallMarginEnd" visible="{= ${incidenceModel>Date} !== '' &amp;&amp; ${incidenceModel>Date} !==undefined}">
                    <Text text="{i18n>incidenceType}"/>
                    <Select selectedKey="{incidenceModel>status}" forceSelection="false">
                        <core:Item key="0" text="{i18n>incidenceCorrect}"/>
                        <core:Item key="1" text="{i18n>incidencePending}"/>
                        <core:Item key="2" text="{i18n>incidenceError}"/>
                    </Select>
                </VBox>
            </HBox>
        </content>
    </Panel>
</core:FragmentDefinition>                         