<core:FragmentDefinition xmlns:core = "sap.ui.core"
                         xmlns="sap.m">

    <Panel>
        <Button id="btnShowCity" text="{i18n>btnShowCity}" visible="{jsonConfig>/visibleBtnShowCity}" press="onShowCity" class="sapUiSmallMarginEnd"/>
        <Button id="btnHideCity" text="{i18n>btnHideCity}" visible="{jsonConfig>/visibleBtnHideCity}" press="onHideCity" class="sapUiSmallMarginEnd"/>
        <Table id="tableEmployee" items="{jsonEmployees>/}">
            <columns>
                <Column visible="{jsonConfig>/visibleID}">
                    <header>
                        <Label text="{i18n>tableId}"/>
                    </header>
                </Column>
                <Column visible="{jsonConfig>/visibleName}">
                    <header>
                        <Label text="{i18n>tableName}"/>
                    </header>
                </Column>   
                <Column visible="{jsonConfig>/visibleCountry}">
                    <header>
                        <Label text="{i18n>tableCountry}"/>
                    </header>
                </Column>        
                <Column visible="{jsonConfig>/visibleCity}">
                    <header>
                        <Label text="{i18n>tableCity}"/>
                    </header>
                </Column>      
                <Column width="100px">
                    <header>
                        <Label text="{i18n>tableShowDetails}"/>
                    </header>
                </Column>                                                                                                                            
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="showEmployee">
                    <cells>
                        <Label text="{jsonEmployees>EmployeeID}"/>
                        <Label text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                        <Label text="{jsonEmployees>Country}"/>
                        <Label text="{jsonEmployees>City}"/>
                        <core:Icon src="sap-icon://show" press="showOrders"/>
                    </cells>                                                                                                                               
                </ColumnListItem>
            </items>
        </Table>
        <HBox id="ordersTable">

        </HBox>                                  
    </Panel>                         

</core:FragmentDefinition>